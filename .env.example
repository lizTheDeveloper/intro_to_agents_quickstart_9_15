# LM Studio Configuration
LM_STUDIO_BASE_URL=http://127.0.0.1:1234/v1
LM_STUDIO_API_KEY=lm-studio
LM_STUDIO_MODEL=qwen/qwen3-32b
LM_STUDIO_TEMPERATURE=0.7
LM_STUDIO_MAX_TOKENS=2000

# Database Configuration
DB_URL=sqlite:///./first_mate.db
DB_ECHO=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_password_here

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT={time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} | {message}
LOG_ROTATION=1 day
LOG_RETENTION=30 days
LOG_LOG_DIR=./logs

# Agent Configuration
AGENT_NAME=First-Mate Agent
AGENT_MAX_CONTEXT_LENGTH=8000
AGENT_CONTEXT_CONSOLIDATION_THRESHOLD=6000
AGENT_MEMORY_RETENTION_DAYS=90
